@page "/portfolio"
@inject HttpClient Http
<h3>Portfolio</h3>


@if (accountMain != null)
{
    <p> not null</p>

    @accountMain.lastTransactionID

    <table class="table">

        <thead>
            <tr>
                <th>Instrument</th>
                <th>ID</th>
                <th>Current Units</th>
                <th>Open Time</th>
                <th>Price</th>
                <th>Market Status</th>

            </tr>
        </thead>

        <tbody>
            <tr>
                    @if (accountMain != null)
                    {
                        @foreach (var openTrade in accountMain.trades)
                        {
                            <td>@openTrade.instrument</td>
                            <td>@openTrade.id</td>
                            <td>@openTrade.currentUnits</td>
                            <td>@openTrade.openTime</td>
                            <td>@openTrade.price</td>
                            <td>@openTrade.state</td>


                        }
                    }

                </tr>

        </tbody>


    </table>

}
else
{
    <p>Null</p>
}


